# ==============================================================================
# SIXBTC ENVIRONMENT VARIABLES
# ==============================================================================
# Copy this file to .env and fill in your actual credentials
# .env is in .gitignore and will NOT be committed to git

# ==============================================================================
# DATABASE (PostgreSQL)
# ==============================================================================
DB_HOST=localhost  # Use 'postgres' if running in Docker
DB_PORT=5432
DB_NAME=sixbtc
DB_USER=sixbtc
DB_PASSWORD=your_secure_password_here

# ==============================================================================
# HYPERLIQUID EXCHANGE
# ==============================================================================
# IMPORTANT: Keep these secret! Never commit to git!
HL_PRIVATE_KEY=0x... # Your Hyperliquid wallet private key
HL_VAULT_ADDRESS=  # Optional: vault address if using vaults

# ==============================================================================
# AI PROVIDERS (Optional - for strategy generation)
# ==============================================================================
# Claude API
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI/Codex
OPENAI_API_KEY=sk-...

# Google Gemini
GOOGLE_API_KEY=...

# ==============================================================================
# ALERTING (Optional)
# ==============================================================================
# Email alerts (Resend, SendGrid, or SMTP)
EMAIL_FROM=alerts@sixbtc.com
EMAIL_TO=your@email.com
EMAIL_API_KEY=...

# ==============================================================================
# PATTERN DISCOVERY API (Optional)
# ==============================================================================
PATTERN_API_URL=http://localhost:8001
PATTERN_API_KEY=  # If authentication is required

# ==============================================================================
# MONITORING (Optional)
# ==============================================================================
# Sentry for error tracking
SENTRY_DSN=

# Prometheus for metrics
PROMETHEUS_PORT=9090
