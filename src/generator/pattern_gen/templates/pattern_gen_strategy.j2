"""
Pattern-Gen Strategy: {{ pattern_name }}
Type: {{ strategy_type }} ({{ composition_type }})
Timeframe: {{ timeframe }}
Direction: {{ direction | lower }}
Blocks: {{ blocks_used | join(', ') }}
Generated: {{ generated_at }}
"""

import talib as ta
import pandas as pd
import numpy as np
from src.strategies.base import StrategyCore, Signal, StopLossType, TakeProfitType


class {{ class_name }}(StrategyCore):
    """
    Pattern: {{ pattern_name }}
    Direction: {{ direction | lower }}
    Lookback: {{ lookback }} bars
    Execution: {{ execution_type }}
    """

    # Direction ('long', 'short', or 'bidi')
    direction = '{{ direction | lower }}'

    # Timeframe (for Sharpe annualization)
    timeframe = '{{ timeframe }}'

    # Execution type for parametric optimization
    execution_type = '{{ execution_type }}'

    # Signal column for vectorized backtest
    signal_column = 'entry_signal'

    # Indicator columns for lookahead test
    {% if is_bidi %}
    indicator_columns = [{% for ind in indicators %}'{{ ind | lower }}', {% endfor %}'long_entry', 'short_entry', 'long_signal', 'short_signal', 'entry_signal']
    {% elif direction | lower == 'bidi' %}
    indicator_columns = [{% for ind in indicators %}'{{ ind | lower }}', {% endfor %}'ema_20', 'long_signal', 'short_signal', 'entry_signal']
    {% else %}
    indicator_columns = [{% for ind in indicators %}'{{ ind | lower }}', {% endfor %}'entry_signal']
    {% endif %}

    # Lookback required
    LOOKBACK = {{ lookback }}

    # Risk management parameters (to be optimized by parametric backtest)
    SL_PCT = {{ sl_pct }}
    TP_PCT = {{ tp_pct }}
    LEVERAGE = {{ leverage }}
    exit_after_bars = {{ exit_bars }}

    # Stop Loss config
    sl_type = StopLossType.PERCENTAGE

    # Take Profit config
    tp_type = TakeProfitType.PERCENTAGE

    def calculate_indicators(self, df: pd.DataFrame) -> pd.DataFrame:
        """
        Calculate indicators and entry_signal for vectorized backtesting.

        Pattern: {{ pattern_name }}
        Composition: {{ composition_type }}
        """
        df = df.copy()

        # === INDICATOR CALCULATIONS ===
        {% if is_bidi %}
        # === BIDI: Separate LONG and SHORT entry conditions ===
        {{ indicator_code | indent(8) }}

        # === ENTRY SIGNAL (BIDI - already generates long_signal/short_signal) ===
        {{ entry_signal_code | indent(8) }}

        # Ensure signals are boolean
        df['long_signal'] = df['long_signal'].fillna(False).astype(bool)
        df['short_signal'] = df['short_signal'].fillna(False).astype(bool)
        df['entry_signal'] = df['entry_signal'].fillna(False).astype(bool)
        {% elif direction | lower == 'bidi' %}
        # Legacy BIDI: Single entry + EMA-20 direction filter
        {{ indicator_code | indent(8) }}

        # EMA-20 for BIDI direction determination
        df['ema_20'] = df['close'].ewm(span=20, adjust=False).mean()

        # === ENTRY SIGNAL ===
        {{ entry_signal_code | indent(8) }}

        # Ensure entry_signal is boolean
        df['entry_signal'] = df['entry_signal'].fillna(False).astype(bool)

        # BIDI: Split entry_signal into long/short based on price vs EMA-20
        df['long_signal'] = (df['entry_signal'] & (df['close'] > df['ema_20'])).astype(bool)
        df['short_signal'] = (df['entry_signal'] & (df['close'] <= df['ema_20'])).astype(bool)
        {% else %}
        # Unidirectional: LONG or SHORT
        {{ indicator_code | indent(8) }}

        # === ENTRY SIGNAL ===
        {{ entry_signal_code | indent(8) }}

        # Ensure entry_signal is boolean
        df['entry_signal'] = df['entry_signal'].fillna(False).astype(bool)
        {% endif %}

        return df

    def generate_signal(self, df: pd.DataFrame, symbol: str = None) -> Signal | None:
        """
        Generate signal for LIVE execution.

        For backtest, the entry_signal column is read directly by the engine.
        """
        if len(df) < self.LOOKBACK + 10:
            return None

        # Read pre-calculated entry signal
        if not df['entry_signal'].iloc[-1]:
            return None

        {% if is_bidi or direction | lower == 'bidi' %}
        # BIDI: Determine direction from which signal fired
        if df['long_signal'].iloc[-1]:
            signal_direction = 'long'
        elif df['short_signal'].iloc[-1]:
            signal_direction = 'short'
        else:
            return None  # Should not happen if entry_signal is True
        {% else %}
        signal_direction = self.direction
        {% endif %}

        # Build signal
        return Signal(
            direction=signal_direction,
            leverage=self.LEVERAGE,
            sl_type=StopLossType.PERCENTAGE,
            sl_pct=self.SL_PCT,
            tp_type=TakeProfitType.PERCENTAGE,
            tp_pct=self.TP_PCT,
            exit_after_bars=self.exit_after_bars,
            reason='{{ pattern_name }}',
        )
